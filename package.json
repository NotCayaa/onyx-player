{
    "name": "onyx-player",
    "author": "caya8205",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "main": "electron.cjs",
    "scripts": {
        "dev": "node --watch backend/index.js",
        "vite": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "start": "concurrently -k \"npm run vite\" \"wait-on http://localhost:5173 && electron electron.cjs\"",
        "build:app": "set NODE_OPTIONS=--max-old-space-size=8192 && vite build && electron-builder"
    },
    "build": {
        "appId": "com.onyx.player",
        "productName": "Onyx Player",
        "win": {
            "target": "nsis",
            "icon": "public/logo.png"
        },
        "directories": {
            "output": "dist-electron"
        },
        "asarUnpack": [
            "**/node_modules/youtube-dl-exec/**",
            "**/backend/**"
        ],
        "files": [
            "dist/**/*",
            "electron.cjs",
            "package.json",
            "backend/**/*"
        ]
    },
    "dependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "audiomotion-analyzer": "^4.5.4",
        "colorthief": "^2.6.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "follow-redirects": "^1.15.11",
        "multer": "^2.0.2",
        "spotify-web-api-node": "^5.0.2",
        "wait-on": "^9.0.3",
        "youtube-dl-exec": "^3.0.30",
        "youtube-pl": "^2.1.2",
        "youtube-sr": "^4.3.12"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^4.0.0",
        "autoprefixer": "^10.4.24",
        "concurrently": "^9.2.1",
        "electron": "^39.2.7",
        "electron-builder": "^26.4.0",
        "postcss": "^8.5.6",
        "svelte": "^5.0.0",
        "tailwindcss": "^4.1.18",
        "vite": "^5.0.0"
    }
}
